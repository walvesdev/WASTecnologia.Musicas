<div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    @Html.ActionLink("Nome do aplicativo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
</div>
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Início", "Index", "Home")</li>
        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
        <li>@Html.ActionLink("Albuns", "Index", "Albuns")</li>
        @if (Request.IsAuthenticated)
        {
            <li>Olá! @User.Identity.Name | @Html.ActionLink("Fazer Logout", "Logout", "Usuarios")</li>
        }
        else
        {
            <li>@Html.ActionLink("Fazer Login", "Login", "Usuarios")</li>
        }
    </ul>
</div>
